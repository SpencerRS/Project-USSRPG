<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">
<TextView
    android:id="@+id/character_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Character Name"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp"/>
    <TextView
        android:id="@+id/character_hp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HP: xx"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@id/character_sp"/>
    <TextView
        android:id="@+id/character_sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SP: xx"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_toLeftOf="@id/character_cp"/>
    <TextView
        android:id="@+id/character_cp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CP: x"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
      android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/character_xp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XP: xxx"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/character_cp"
        android:layout_alignParentRight="true"/>

</RelativeLayout>